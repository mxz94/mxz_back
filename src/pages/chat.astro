---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="liu" sideBarActiveItemID="chat">
    <div class="mb-5">
        <div class="text-3xl w-full font-bold">留言</div>
    </div>

    <div class="mb-10 text-justify lg:max-w-[1200px] max-w-[180vw]  lg:min-w-[900px] " >
        <link
                rel="stylesheet"
                href="https://unpkg.com/@waline/client@v3/dist/waline.css"
        />
        <div id="waline"></div>
        <script type="module">
            import { init } from 'https://unpkg.com/@waline/client@v3/dist/waline.js';

            init({
                el: '#waline',
                serverURL: 'https://waline.malanxi.top/',
                copyright: false,
                login: 'disable',
                imageUploader: false,
                requiredMeta: ['nick'],
            });
        </script>
    </div>

</BaseLayout>