---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Comment from "../../components/Comment.astro";


const { message = '你好，世界！' } = Astro.props;
// const data = response.json()
---
<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    #main-content {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    #about2 {
        flex: 1;
        width: 100%;
        overflow: hidden; /* 避免iframe底部出现滚动条 */
    }

    iframe {
        width: 100%;
        height: 100%;
        border: none;
    }
</style>
<Layout>
    <Header />
    <main id="main-content">
        <section id="about2">
            <iframe src="https://my.836323493.workers.dev"  id="frame_full" frameborder="0" scrolling="auto"  ></iframe>
        </section>
    </main>

</Layout>
<script>
    // 在窗口大小变化时调整iframe高度
    window.addEventListener('resize', adjustIframeHeight);

    function adjustIframeHeight() {
        var iframe = document.getElementById('frame_full');
        var mainContent = document.getElementById('main-content');
        iframe.height = mainContent.clientHeight;
    }

    // 初始调整一次
    adjustIframeHeight();
</script>