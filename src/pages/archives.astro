---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import {Image} from "astro:assets";
import {SITE} from "../config";
import data from '/public/douban/movie.json'

const m = data[0].subject.cover_url
---

<BaseLayout title="归档" sideBarActiveItemID="archives">
    <br/>
    <div class="mb-5">
        <div class="text-3xl w-full font-bold">碎笔</div>
    </div>
    <div class="card-container">
        <a href={SITE.website + "/blog/archives/成长日记"}  class="card-link">
            <div class="card">
                <img src="/img/cover/child2.jpg" alt="Image description" class="card-img">
                <div class="card-body">
                    <h2 class="card-title">成长日记</h2>
                    <p class="card-text">兰汐</p>
                </div>
            </div>
        </a>
        <a href={SITE.website + "/blog/archives/朝花夕拾"} class="card-link">
            <div class="card">
                <img src="/img/cover/朝花夕拾.jpg" alt="Image description" class="card-img">
                <div class="card-body">
                    <h2 class="card-title">朝花夕拾</h2>
                    <p class="card-text">朝花夕拾</p>
                </div>
            </div>
        </a>
        <a href={SITE.website + "/note/archives/notes"}  class="card-link">
            <div class="card">
                <img src="/img/cover/teg.webp" alt="Image description" class="card-img">
                <div class="card-body">
                    <h2 class="card-title">技术笔记</h2>
                    <p class="card-text">笔记</p>
                </div>
            </div>
        </a>
        <a href={SITE.website + "/move"}   class="card-link">
            <div class="card">
                <img src={m} alt="Image description" class="card-img">
                <div class="card-body">
                    <h2 class="card-title">看过的电影</h2>
                    <p class="card-text">已看过电影数（{data.length}）</p>
                </div>
            </div>
        </a>
        <a href={SITE.website + "/blog/archives/2024"} class="card-link">
            <div class="card">
                <img src="/img/cover/2024.jpg" alt="Image description" class="card-img">
                <div class="card-body">
                    <h2 class="card-title">二零二四</h2>
