---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={600}
            height={600}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[8rem] md:max-h-[8rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
                {
                    tags &&
                    tags.map((tag) => (
                            <a href={`/tag/${tag}`} class="badge badge-outline float-right mr-1">
                                {tag}
                            </a>
                    ))
                }
        </h1>
          <a href={url} target={target}> <p class="py-1 text-1xl">{desc}</p></a>
      </div>
    </div>
  </a>
</div>
